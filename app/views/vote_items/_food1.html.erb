<div class="food-details">
  <h3><%= food1.title %></h3>
  <p class="img">
    <%= image_tag food1.image_url_url(:thumb).to_s %>
  </p>
  <p class="dsp"><%= sanitize(food1.description) %></p>
  <p class="price_line">
    <span class="price"><%= sprintf("￥%0.02f", food1.price) %></span>
  </p>

  <%if food1.vote_items.find_by_user_id(current_user.id) %>
    <%= link_to raw("<span class=\"glyphicon glyphicon-remove\"></span>&nbsp;&nbsp;取消"),
     current_user.vote_items.find_by_food_id(food1.id), method: :delete, :class => 'btn btn-info btn-sm col-md-3', :remote => true  %>
  <% else %>

    <%= link_to raw("<span class=\"glyphicon glyphicon-ok\"></span>&nbsp;&nbsp;投票"),
     vote_items_path(:food_id => food1), method: :post, :class => 'btn btn-info btn-sm col-md-3', :remote => true %>
      
  <% end %>
</div>