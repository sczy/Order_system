<div class="container">
  <div class="row ">
    <div class="col-xs-12 col-sm-12">
      <div class="jumbotron">
        <h2>FOODS</h2>
        <p>good good good good good good good good </p>
      </div>
    
      <div class="row">
        <% @foods.each do |food| %>
        <div class="col-6 col-sm-6 col-lg-4">
        	<h3><%= food.title %></h3>
          <p class="img">
            <%= image_tag food.image_url_url(:thumb).to_s %>
          </p>
        	<p class="dsp"><%= sanitize(food.description) %></p>
        	<p class="price_line">
        		<span class="price"><%=  number_to_currency(food.price) %></span>
        	</p>
          
          <p>
            <%= link_to 'Edit', edit_food_path(food), :class => 'btn btn-info btn-sm'  %>
            <%= link_to 'New ', new_food_path , :class => 'btn btn-info btn-sm'  %>
            <%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' },
              :class => 'btn btn-info btn-sm' %>
          </p>
          
        </div>
        <% end %>
      </div>
      <p><%= will_paginate @foods %></p>
    </div>
  </div>
  
  <hr>
  <footer>
  <p>Â© Company 2013</p>
  </footer>
  
</div>
 





