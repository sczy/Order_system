<div class="edit">
<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  
  <div class="field">
    <p>
      <%= f.file_field :image_url %>
    </p>
    <div>
      <%= f.label :remote_image_url_url, "or image URL" %>
      <%= f.text_field :remote_image_url_url, :class => "form-control"%>
    </div>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => "10", :class => "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Updata food", :class => "btn btn-lg btn-primary" %>
  </div>
<% end %>
</div>
