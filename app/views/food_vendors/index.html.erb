  </tr>

<% @food_vendors.each do |food_vendor| %>
  <tr>
    <td><%= food_vendor.food.title %></td>
    <td><%= food_vendor.vendor.title %></td>
    <td><%= link_to 'Show', food_vendor %></td>
    <td><%= link_to 'Edit', edit_food_vendor_path(food_vendor) %></td>
