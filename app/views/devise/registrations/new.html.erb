<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <h2>注册</h2>
  <div>
  <%= f.email_field :email, :autofocus => true , :class => "form-control", :placeholder => "邮件地址" %></div>
  <div>
    
  <div>
  <%= f.text_field :username, :class => "form-control", :placeholder => "用户名" %></div>
  <div>
    
  <%= f.password_field :password, :class => "form-control", :placeholder => "密码" %></div>
  
  <div>
  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "确认密码" %></div>
  
  <br />
  <div><%= f.submit "注册", :class => "btn btn-lg btn-primary btn-block" %></div>
  
<% end %>



