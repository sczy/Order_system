<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <h2>登陆</h2>
  <div>
  <%= f.email_field :email, :autofocus => true , :class => "form-control", :placeholder => "邮件地址" %></div>
  <div>
  <%= f.password_field :password, :class => "form-control", :placeholder => "密码" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me ,"记住我", :class => "box"%></div>
  <% end -%>

  <div><%= f.submit "登陆", :class => "btn btn-lg btn-primary btn-block" %></div>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "忘记密码?", new_password_path(resource_name) %><br />
  <% end -%>
  
<% end %>



